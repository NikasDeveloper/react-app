{
    "name": "react-app",
    "version": "1.0.14",
    "description": "react-app",
    "license": "MIT",
    "main": "index.js",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http: //github.com/damianobarbati)",
    "scripts": {
        "jslint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern **/*.min.js .",
        "csslint": "stylelint **/*.css **/*.scss --ignore-path .gitignore --ignore-pattern **/*.min.css .",
        "docs": "jsdoc -c ./config/jsdoc.json && open docs/index.html",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --watchAll --no-cache --coverage",
        "labels": "github-set-labels --token `jq -r .github.token ./config/keys.js` --repo $npm_package_name --labels config/labels.json --overwrite",
        "build:dev": "NODE_ENV=development webpack --config ./config/webpack.config.js --progress --watch",
        "build:stg": "NODE_ENV=staging webpack --config ./config/webpack.config.js --progress",
        "build:prod": "NODE_ENV=production webpack --config ./config/webpack.config.js --progress",
        "unserve": "pm2 flush && pm2 delete ./config/pm2.config.js && pm2 flush",
        "serve:dev": "pm2 start ./config/pm2.config.js --env development && pm2 logs",
        "serve:stg": "pm2 start ./config/pm2.config.js --env staging && pm2 logs",
        "serve:prod": "pm2 start ./config/pm2.config.js --env production && pm2 logs"
    },
    "browserslist": [
        "chrome 58"
    ],
    "logo": "./logo.svg",
    "bundles": [
        {
            "name": "visitor",
            "baseRoute": "/",
            "entry": "./apps/visitor/index.js",
            "vendor": [
                "axios",
                "classnames",
                "react",
                "react-create-app",
                "react-create-store",
                "react-dom",
                "react-router-redux",
                "react-router-dom",
                "history",
                "lodash-es",
                "jss",
                "react-jss",
                "jss-preset-default",
                "normalize-jss"
            ],
            "htmlInput": "./apps/index.html"
        },
        {
            "name": "user",
            "baseRoute": "/user",
            "entry": "./apps/user/index.js",
            "vendor": [
                "redux"
            ],
            "htmlInput": "./apps/index.html",
            "cssOutputFilename": null
        },
        {
            "name": "admin",
            "baseRoute": "/admin",
            "entry": "./apps/admin/index.js",
            "vendor": [
                "axios",
                "classnames",
                "react",
                "react-create-app",
                "react-create-store",
                "react-dom",
                "react-router-redux",
                "react-router-dom",
                "history",
                "lodash-es",
                "jss",
                "react-jss",
                "jss-preset-default",
                "normalize-jss"
            ],
            "htmlInput": "./apps/index.html",
            "cssoOutputFilename": null
        },
        {
            "name": "503",
            "htmlInput": "./apps/503.html",
            "htmlOutputFilename": "./build/503.html"
        }
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module",
            "impliedStrict": true,
            "ecmaFeatures": {
                "jsx": true,
                "impliedStrict": true,
                "globalReturn": false,
                "experimentalObjectRestSpread": true
            }
        },
        "env": {
            "browser": true,
            "node": true,
            "jest": true,
            "es6": true
        },
        "plugins": [
            "import",
            "react",
            "jest"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "no-console": "off",
            "no-unused-vars": "off",
            "no-unsafe-finally": "off",
            "no-unreachable": "off",
            "react/no-unescaped-entities": "off",
            "react/no-children-prop": "off"
        }
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-sass-guidelines"
        ],
        "rules": {
            "indentation": 4,
            "order/properties-alphabetical-order": null,
            "no-missing-end-of-source-newline": null,
            "selector-list-comma-newline-after": null,
            "max-nesting-depth": null,
            "selector-pseudo-class-no-unknown": [
                true,
                {
                    "ignorePseudoClasses": [
                        "global",
                        "local"
                    ]
                }
            ]
        }
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "browsers": [
                            "chrome 54",
                            "safari 9",
                            "firefox 50",
                            "edge 12",
                            "explorer 11"
                        ]
                    },
                    "modules": false,
                    "useBuiltIns": true,
                    "debug": true
                }
            ],
            "stage-0",
            "react"
        ],
        "plugins": [
            "transform-decorators-legacy",
            "transform-class-properties",
            [
                "react-css-modules",
                {
                    "filetypes": {
                        ".scss": {
                            "syntax": "postcss-scss"
                        }
                    }
                }
            ]
        ]
    },
    "jest": {
        "bail": true
    },
    "host": {
        "url": "http://localhost:8080",
        "hostname": "localhost",
        "httpPort": 8080
    },
    "dependencies": {
        "axios": "^0.16.1",
        "kcors": "^2.2.1",
        "koa": "^2.3.0",
        "koa-body": "^2.3.0",
        "koa-compress": "^2.0.0",
        "koa-json": "^2.0.2",
        "koa-no-trailing-slash": "^2.0.0",
        "koa-router": "^7.2.1",
        "koa-send": "^4.1.0",
        "lodash": "^4.17.4",
        "pm2": "^2.5.0",
        "yargs": "^8.0.2"
    },
    "devDependencies": {
        "classnames": "^2.2.5",
        "jss": "^8.1.0",
        "jss-preset-default": "^3.0.0",
        "jss-vendor-prefixer": "^6.0.0",
        "node-sass": "^4.5.3",
        "normalize-jss": "^3.1.0",
        "react-jss": "^6.1.1",
        "autobind-decorator": "^2.0.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.0",
        "babel-loader": "^7.1.1",
        "babel-plugin-react-css-modules": "^3.1.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-preset-env": "^1.5.2",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babili-webpack-plugin": "^0.1.1",
        "case-sensitive-paths-webpack-plugin": "^2.1.1",
        "clean-webpack-plugin": "^0.1.16",
        "compression-webpack-plugin": "^0.4.0",
        "css-loader": "^0.28.4",
        "cssnano-preset-default": "^4.0.0-rc.0",
        "enzyme": "^2.9.1",
        "enzyme-to-json": "^1.5.1",
        "eslint": "^4.1.1",
        "eslint-loader": "^1.7.1",
        "eslint-plugin-import": "^2.6.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-react": "^7.1.0",
        "extract-text-webpack-plugin": "^3.0.0",
        "favicons-webpack-plugin": "^0.0.7",
        "file-loader": "^0.11.1",
        "happypack": "^4.0.0-beta.1",
        "hard-source-webpack-plugin": "^0.4.9",
        "history": "^4.6.3",
        "html-webpack-include-assets-plugin": "^0.0.6",
        "html-webpack-plugin": "^2.29.0",
        "img-loader": "^2.0.0",
        "jest": "^20.0.4",
        "json-loader": "^0.5.4",
        "lodash-es": "^4.17.4",
        "open-browser-webpack-plugin": "^0.0.5",
        "postcss-loader": "^2.0.5",
        "postcss-scss": "^1.0.2",
        "prop-types": "^15.5.10",
        "react": "^15.6.0",
        "react-create-app": "^1.0.3",
        "react-create-store": "^1.0.4",
        "react-dom": "^15.6.0",
        "react-redux": "^5.0.4",
        "react-router": "^4.1.1",
        "react-router-dom": "^4.1.1",
        "react-router-redux": "next",
        "recompose": "^0.24.0",
        "redux": "^3.7.2",
        "redux-promise": "^0.5.3",
        "redux-thunk": "^2.2.0",
        "sass-loader": "^6.0.5",
        "string-replace-loader": "^1.2.0",
        "style-loader": "^0.18.2",
        "stylelint-config-sass-guidelines": "^2.1.0",
        "stylelint-config-standard": "^16.0.0",
        "stylelint-scss": "^1.4.4",
        "stylelint-webpack-plugin": "^0.8.0",
        "url-loader": "^0.5.9",
        "webpack": "^3.0.0",
        "webpack-bundle-analyzer": "^2.8.2",
        "webpack-notifier": "^1.5.0",
        "webpack-visualizer-plugin": "^0.1.11"
    }
}
