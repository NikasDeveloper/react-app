{
    "name": "react-app",
    "version": "1.0.1",
    "license": "MIT",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http: //github.com/damianobarbati)",
    "scripts": {
        "pm2": "./node_modules/pm2/bin/pm2",
        "lint": "./node_modules/eslint/bin/eslint.js --ignore-path .gitignore --ignore-pattern **/*.min.js .",
        "webpack": "./node_modules/webpack/bin/webpack.js",
        "jsdoc": "./node_modules/jsdoc/jsdoc.js",
        "docs": "yarn jsdoc -- -c ./config/jsdoc.json && open docs/index.html",
        "jest": "node ./node_modules/jest/bin/jest.js",
        "test": "yarn jest -- --no-cache --coverage",
        "test:watch": "yarn jest -- --watchAll --no-cache --coverage",
        "labels": "./node_modules/github-set-labels/index.js --token `jq -r .github.token ./config/production.pwd` --repo $npm_package_name --labels config/labels.json --overwrite",
        "build:clean": "rm -rf ./build",
        "build:dev": "NODE_ENV=development yarn webpack -- --config ./config/webpack.config.js --watch --progress",
        "build:stg": "NODE_ENV=staging yarn webpack -- --config ./config/webpack.config.js --watch --progress",
        "build:prod": "NODE_ENV=production yarn webpack -- --config ./config/webpack.config.js --progress",
        "unserve": "yarn pm2 delete ./config/pm2.config.js && yarn pm2 flush",
        "serve:dev": "NODE_ENV=development yarn pm2 start ./config/pm2.config.js && yarn pm2 logs",
        "serve:stg": "NODE_ENV=staging yarn pm2 start ./config/pm2.config.js && yarn pm2 logs",
        "serve:prod": "NODE_ENV=production yarn pm2 start ./config/pm2.config.js && yarn pm2 logs"
    },
    "browserslist": [
        "chrome 58"
    ],
    "logo": "./logo.svg",
    "bundles": [
        {
            "name": "visitor",
            "baseRoute": "/",
            "entry": "./apps/visitor/index.js",
            "vendor": [
                "lodash"
            ],
            "entryOutputFilename": "app",
            "vendorOutputFilename": "vendor",
            "htmlInput": "./apps/visitor/index.html",
            "htmlOutput": "./build/visitor/index.html"
        },
        {
            "name": "user",
            "baseRoute": "/user",
            "entry": "./apps/user/index.js",
            "vendor": [
                "redux"
            ],
            "entryOutputFilename": "app",
            "vendorOutputFilename": "vendor",
            "htmlInput": "./apps/user/index.html",
            "htmlOutput": "./build/user/index.html"
        },
        {
            "name": "admin",
            "baseRoute": "/admin",
            "entry": "./apps/admin/index.js",
            "vendor": [
                "react",
                "redux",
                "lodash"
            ],
            "entryOutputFilename": "app",
            "vendorOutputFilename": "vendor",
            "htmlInput": "./apps/admin/index.html",
            "htmlOutput": "./build/admin/index.html"
        },
        {
            "name": "503",
            "htmlInput": "./apps/503.html",
            "htmlOutput": "./build/503.html"
        }
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "env": {
            "browser": true,
            "node": true,
            "jest": true
        },
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module",
            "allowImportExportEverywhere": false,
            "impliedStrict": true,
            "ecmaFeatures": {
                "jsx": true,
                "experimentalObjectRestSpread": true
            }
        },
        "plugins": [
            "import",
            "react",
            "jest"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "no-console": "off",
            "no-unused-vars": "off"
        }
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-sass-guidelines"
        ],
        "rules": {
            "indentation": 4,
            "no-missing-end-of-source-newline": null,
            "selector-list-comma-newline-after": null,
            "max-nesting-depth": null,
            "selector-pseudo-class-no-unknown": [
                true,
                {
                    "ignorePseudoClasses": [
                        "global",
                        "local"
                    ]
                }
            ]
        }
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "browsers": [
                            "chrome 58"
                        ]
                    },
                    "modules": false,
                    "useBuiltIns": true,
                    "debug": true
                }
            ],
            "stage-0",
            "react"
        ],
        "plugins": [
            "transform-decorators-legacy",
            "transform-class-properties",
            [
                "react-css-modules",
                {
                    "filetypes": {
                        ".scss": "postcss-scss"
                    }
                }
            ]
        ]
    },
    "jest": {
        "bail": true
    },
    "dependencies": {
        "kcors": "^2.2.1",
        "koa": "^2.2.0",
        "koa-body": "^2.1.0",
        "koa-compress": "^2.0.0",
        "koa-cors": "^0.0.16",
        "koa-json": "^2.0.2",
        "koa-no-trailing-slash": "^2.0.0",
        "koa-router": "^7.2.0",
        "koa-send": "^4.1.0",
        "lodash": "^4.17.4",
        "pm2": "^2.5.0",
        "yargs": "^8.0.2"
    },
    "devDependencies": {
        "autobind-decorator": "^1.4.0",
        "axios": "^0.16.1",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.0",
        "babel-loader": "^7.0.0",
        "babel-plugin-react-css-modules": "^2.8.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-preset-env": "^1.5.2",
        "babel-preset-latest": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babili-webpack-plugin": "^0.1.1",
        "clean-webpack-plugin": "^0.1.16",
        "compression-webpack-plugin": "^0.4.0",
        "css-loader": "^0.28.4",
        "cssnano-preset-default": "^4.0.0-rc.0",
        "enzyme": "^2.8.2",
        "enzyme-to-json": "^1.5.1",
        "eslint": "^4.0.0",
        "eslint-loader": "^1.7.1",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-react": "^7.0.1",
        "extract-text-webpack-plugin": "^2.1.0",
        "favicons-webpack-plugin": "^0.0.7",
        "file-loader": "^0.11.1",
        "github-set-labels": "^1.0.4",
        "history": "^4.6.1",
        "html-webpack-plugin": "^2.28.0",
        "img-loader": "^2.0.0",
        "jest": "^20.0.4",
        "json-loader": "^0.5.4",
        "lodash-es": "^4.17.4",
        "node-sass": "^4.5.3",
        "open-browser-webpack-plugin": "^0.0.5",
        "postcss-loader": "^2.0.5",
        "postcss-scss": "^1.0.1",
        "prop-types": "^15.5.10",
        "react": "^15.5.4",
        "react-create-app": "^1.0.3",
        "react-create-store": "^1.0.4",
        "react-dom": "^15.5.4",
        "react-redux": "^5.0.4",
        "react-router": "^4.1.1",
        "react-router-dom": "^4.1.1",
        "react-router-redux": "next",
        "recompose": "^0.23.5",
        "redux": "^3.6.0",
        "redux-promise": "^0.5.3",
        "redux-thunk": "^2.2.0",
        "sass-loader": "^6.0.5",
        "string-replace-loader": "^1.2.0",
        "style-loader": "^0.18.2",
        "stylelint-config-sass-guidelines": "^2.1.0",
        "stylelint-config-standard": "^16.0.0",
        "stylelint-scss": "^1.4.4",
        "stylelint-webpack-plugin": "^0.7.0",
        "url-loader": "^0.5.9",
        "webpack": "^2.6.1",
        "webpack-bundle-analyzer": "^2.8.2",
        "webpack-chunk-hash": "^0.4.0",
        "webpack-notifier": "^1.5.0",
        "webpack-visualizer-plugin": "^0.1.11"
    }
}
