{
    "name": "react-app",
    "version": "2.0.0",
    "description": "react-app",
    "license": "MIT",
    "main": "index.js",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
    "scripts": {
        "jslint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern **/*.min.js .",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --watchAll --no-cache --coverage",
        "labels": "github-set-labels --token `jq -r .github.token ./config/keys.js` --repo $npm_package_name --labels config/labels.json --overwrite",
        "build:dev": "NODE_ENV=development webpack --config ./config/webpack.config.js --progress --watch",
        "build:stg": "NODE_ENV=staging webpack --config ./config/webpack.config.js --progress",
        "build:prod": "NODE_ENV=production webpack --config ./config/webpack.config.js --progress",
        "unserve": "pm2 flush && pm2 delete ./config/pm2.config.js && pm2 flush",
        "serve:dev": "pm2 startOrReload ./config/pm2.config.js --env development",
        "serve:stg": "pm2 startOrReload ./config/pm2.config.js --env staging",
        "serve:prod": "pm2 startOrReload ./config/pm2.config.js --env production"
    },
    "logo": "./logo.svg",
    "browserslist": [
        "chrome 58",
        "safari 10"
    ],
    "locales": [
        "us",
        "uk",
        "de",
        "fr",
        "es",
        "pt",
        "it"
    ],
    "bundles": [
        {
            "name": "visitor",
            "baseRoute": "/",
            "entry": "./apps/visitor/index.js",
            "vendor": [
                "@damianobarbati/jss-reset",
                "axios",
                "classnames",
                "history",
                "lodash-es",
                "prop-types",
                "react",
                "react-dom",
                "react-jss",
                "react-redux",
                "react-router-dom",
                "react-router-redux",
                "react-router-transition",
                "reax-helpers",
                "redux"
            ],
            "htmlInput": "./apps/index.html"
        },
        {
            "name": "user",
            "baseRoute": "/user",
            "entry": "./apps/user/index.js",
            "vendor": [
                "@damianobarbati/jss-reset",
                "axios",
                "classnames",
                "history",
                "lodash-es",
                "prop-types",
                "react",
                "react-dom",
                "react-jss",
                "react-redux",
                "react-router-dom",
                "react-router-redux",
                "react-router-transition",
                "reax-helpers",
                "redux"
            ],
            "htmlInput": "./apps/index.html"
        },
        {
            "name": "503",
            "htmlInput": "./apps/503.html",
            "htmlOutputFilename": "./build/503.html"
        }
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module",
            "impliedStrict": true,
            "ecmaFeatures": {
                "jsx": true,
                "impliedStrict": true,
                "globalReturn": false,
                "experimentalObjectRestSpread": true
            }
        },
        "env": {
            "browser": true,
            "node": true,
            "jest": true,
            "es6": true
        },
        "plugins": [
            "import",
            "react",
            "jest"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "no-console": "off",
            "no-unused-vars": "off",
            "no-unsafe-finally": "off",
            "no-unreachable": "off",
            "react/jsx-key": "off",
            "react/no-unescaped-entities": "off",
            "react/no-children-prop": "off"
        }
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "modules": false,
                    "useBuiltIns": "usage",
                    "debug": false
                }
            ],
            "stage-0",
            "react"
        ],
        "plugins": [
            "lodash",
            "transform-decorators-legacy",
            "transform-class-properties"
        ]
    },
    "host": {
        "url": "http://localhost:8080",
        "hostname": "localhost",
        "httpPort": 8080
    },
    "dependencies": {
        "axios": "0.16.2",
        "better-console": "1.0.0",
        "ip": "1.1.5",
        "kcors": "2.2.1",
        "koa": "2.3.0",
        "koa-better-ratelimit": "2.1.2",
        "koa-body": "2.5.0",
        "koa-compress": "2.0.0",
        "koa-json": "2.0.2",
        "koa-no-trailing-slash": "^2.1.0",
        "koa-router": "7.2.1",
        "koa-send": "4.1.1",
        "koa-sslify": "2.1.2",
        "koa-useragent": "1.0.0",
        "lodash": "4.17.4",
        "puppeteer": "^0.12.0",
        "yargs": "9.0.1"
    },
    "devDependencies": {
        "@damianobarbati/jss-reset": "1.0.3",
        "babel-eslint": "8.0.1",
        "babel-jest": "21.2.0",
        "babel-loader": "7.1.2",
        "babel-minify-webpack-plugin": "0.2.0",
        "babel-plugin-lodash": "3.2.11",
        "babel-plugin-transform-class-properties": "6.24.1",
        "babel-plugin-transform-decorators-legacy": "1.3.4",
        "babel-polyfill": "7.0.0-alpha.1",
        "babel-preset-env": "2.0.0-alpha.19",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-0": "6.24.1",
        "case-sensitive-paths-webpack-plugin": "2.1.1",
        "classnames": "2.2.5",
        "clean-webpack-plugin": "0.1.17",
        "compression-webpack-plugin": "1.0.1",
        "eslint": "4.9.0",
        "eslint-loader": "1.9.0",
        "eslint-plugin-import": "2.7.0",
        "eslint-plugin-jest": "21.2.0",
        "eslint-plugin-react": "7.4.0",
        "extract-text-webpack-plugin": "3.0.1",
        "favicons-webpack-plugin": "0.0.7",
        "file-loader": "1.1.5",
        "happypack": "4.0.0",
        "history": "4.7.2",
        "html-webpack-include-assets-plugin": "1.0.1",
        "html-webpack-plugin": "2.30.1",
        "img-loader": "2.0.0",
        "jest": "21.2.1",
        "lodash-es": "4.17.4",
        "open-browser-webpack-plugin": "0.0.5",
        "prop-types": "15.6.0",
        "react": "16.0.0",
        "react-dom": "16.0.0",
        "react-jss": "7.2.0",
        "react-redux": "5.0.6",
        "react-router-dom": "4.2.2",
        "react-router-redux": "5.0.0-alpha.6",
        "react-router-transition": "0.x",
        "reax-helpers": "1.0.9",
        "string-replace-loader": "1.3.0",
        "typeface-roboto": "0.0.41",
        "url-loader": "0.6.2",
        "webpack": "3.8.1",
        "webpack-bundle-analyzer": "2.9.0",
        "webpack-notifier": "1.5.0"
    }
}
